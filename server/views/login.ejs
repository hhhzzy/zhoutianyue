<%- include('loginHeader') %>
<form  method="post" class="layui-form">
	<div class="login_face"><img src="images/face.jpg" class="userAvatar"></div>
	<div class="layui-form-item input-item">
		<label for="userName">用户名</label>
		<input name="userName" type="text" placeholder="请输入用户名" id="userName" class="layui-input" value="admin" lay-verify="required">
	</div>
	<div class="layui-form-item input-item">
		<label for="password">密码</label>
		<input name="password" type="password" placeholder="请输入密码" id="password" class="layui-input" value="admin" lay-verify="required" >
	</div>
	<div class="yzm">
		<div class="layui-form-item input-item" id="imgCode">
			<label for="code">验证码</label>
			<input name="code" type="text" placeholder="请输入验证码" id="code" class="layui-input" lay-verify="required">
		</div>
		<img class="yzmCode" src="http://localhost:3002/captcha">
	</div>
	<div class="layui-form-item">
		<button type="submit" class="layui-btn layui-block" lay-filter="login" lay-submit>登录</button>
	</div>
	<div class="layui-form-item layui-row">
		<a href="javascript:;" class="seraph icon-qq layui-col-xs4 layui-col-sm4 layui-col-md4 layui-col-lg4"></a>
		<a href="javascript:;" class="seraph icon-wechat layui-col-xs4 layui-col-sm4 layui-col-md4 layui-col-lg4"></a>
		<a href="javascript:;" class="seraph icon-sina layui-col-xs4 layui-col-sm4 layui-col-md4 layui-col-lg4"></a>
	</div>
</form>
<%- include('loginFooter') %>
