<%- include('../header') %>
<div class="layui-layout layui-layout-admin">
	<%- include('../components/all-header') %>
	<!-- 左侧导航 -->
	<%- include('../components/nav-slider') %>
	<div class="layui-body">
		<!-- 内容主体区域 -->
		<!-- 搜索部分 -->
		<form class="layui-form">
			<blockquote class="layui-elem-quote quoteBox">
				<div class="layui-inline">
					<div class="layui-input-inline">
						<input type="text" class="layui-input goodsName" placeholder="请输入商品的名称">
					</div>
					<div class="layui-input-inline">
						<input type="text" class="layui-input goodsType" placeholder="请输入商品的类别">
					</div>
					<a class="layui-btn search_btn" data-type="reload">搜索</a>
				</div>
				<div class="layui-inline">
					<a class="layui-btn layui-btn-normal addNews_btn" href="/goodsAdd">添加商品</a>
				</div>
				<div class="layui-inline">
					<a class="layui-btn layui-btn-warm addNews_btn" href="/goodsType">添加商品分类</a>
				</div>
				<div class="layui-inline">
					<a class="layui-btn layui-btn-danger layui-btn-normal delAll_btn">批量删除</a>
				</div>
			</blockquote>
		</form>
		<!-- 表格展示部分 -->
		<div class="layui-form layui-border-box layui-table-view" lay-filter="LAY-table-1">
			<div class="layui-table-box">
				<div class="layui-table-header">
					<table cellspacing="0" cellpadding="0" border="0" id="articleList" lay-filter="articleList" class="layui-hide"></table>
					<div id="laypage"></div>
					<script type="text/html" id="barDemo">
					    <!--<a class="layui-btn layui-btn-primary layui-btn-sm" lay-event="detail">查看</a>-->
					    <a class="layui-btn layui-btn-sm" lay-event="edit">编辑</a>
					    <a class="layui-btn layui-btn-danger layui-btn-sm" lay-event="del">删除</a>
					</script>
				</div>
			</div>
			
		</div>
	</div>
	<!-- 底部 -->
	<div class="layui-footer footer">
		<p><span>copyright @2018 黄照阳</span>　</p>
	</div>
</div>
<script src="js/article/goodsList.js"></script>
<%- include('../footer') %>
